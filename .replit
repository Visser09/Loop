modules = ["nodejs-20", "web"]
run = "run"

[nix]
channel = "stable-25_05"
packages = ["inshellisense"]

[deployment]
run = ["sh", "-c", "run"]

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Development"
author = 46634489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd CineLoop && NODE_ENV=development API_PORT=3001 PORT=5000 npm run dev"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 5000
